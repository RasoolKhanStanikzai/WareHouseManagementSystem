            <PasswordField fx:id="txtUserPassword" promptText="User Password" styleClass="form-control" />
            <ComboBox fx:id="txtUserRole" prefHeight="34.0" prefWidth="298.0" promptText="User Role" styleClass="form-control" stylesheets="@../StyleingCSS/StyleCSS.css" />
